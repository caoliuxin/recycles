<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.aaa.dao.SubscribeDao">
    <select id="selectSubscriber" resultType="map">
        select * from subscribe s,address a ,users u,timeSlice t
        where s.userid=u.id and a.id=s.addressid and s.subquantumdate=t.id and orderstate=0
    </select>

    <insert id="addSubscribe" parameterType="com.aaa.entity.Subscribe">
      insert into(addressid,subdate,subquantumdate) subscribe values(#{addressid.id},#{subdate},#{subquantumdate.id})
    </insert>
</mapper>